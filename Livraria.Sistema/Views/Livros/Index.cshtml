<head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
@model IEnumerable<Livraria.Sistema.Models.LIVROS>
@using System.Web.Optimization
@{
    ViewBag.Title = "Index";
    if (Session["idUsuario"] == null)
    {
        Response.Redirect("/Login/Login");
    }
}

<br>
<h2>Livros</h2>
<br>
<p>
    <button type="button" class="btn btn-outline-primary">
        @Html.ActionLink("Adicionar livro", "Create")
    </button>
</p>
<br>

@using (Ajax.BeginForm("Index", "Livros", new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "divListaLivros" }))
{
<div class="form-inline">
    @Html.TextBox("id", null, new { @class = "form-control", @placeholder = "Título" })
    <span class="texto"></span>
    @Html.TextBox("procuraAutor", null, new { @class = "form-control", @placeholder = "Autor" })
    <span class="texto"></span>
    @Html.TextBox("procuraCategoria", null, new { @class = "form-control", @placeholder = "Categoria" })
    <span class="texto"></span>
    <button type="submit" value="Procurar" class="btn btn-outline-secondary">Procurar</button>
</div>
}
<br>

@Html.Partial("_Livros", Model)

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
