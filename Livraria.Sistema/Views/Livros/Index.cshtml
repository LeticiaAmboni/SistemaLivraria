<head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
    <script src="jquery.maskMoney.js" type="text/javascript"></script>
</head>
@model IEnumerable<Livraria.Sistema.Models.LIVROS>
@using System.Web.Optimization
@{
    ViewBag.Title = "Index";
}

<br>
<h2>Livros</h2>
<br>
<p>
    <button type="button" class="btn btn-outline-primary">
        @Html.ActionLink("Adicionar livro", "Create")
    </button>
</p>
<br>

@using (Ajax.BeginForm("Index", "Livros", new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "divListaLivros" }))
{
    <p>
        Título:  @Html.TextBox("id")

        Autor: @Html.TextBox("procuraAutor")

        Categoria: @Html.TextBox("procuraCategoria") <input type="submit" value="Procurar" />
    </p>
}

@Html.Partial("_Livros", Model)

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $(function () {
        $('#PRECO').maskMoney();
    })
</script>