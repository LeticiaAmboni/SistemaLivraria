@model Livraria.Sistema.Models.FUNCIONARIOS
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutLogin.cshtml";
}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form validate-form p-l-55 p-r-55 p-t-178" action="Verificacao" method="post">

                <span class="login100-form-title">
                    Login
                    <br>
                    SistemaLivraria
                </span>
                <br>
                <div class="wrap-input100 validate-input m-b-16" data-validate="Insira o username">
                    <!--<input class="input100" type="text" name="username" placeholder="Username">-->
                    <!--<span class="focus-input100"></span>-->
                    @Html.EditorFor(model => model.USERNAME, new
                    {
                        htmlAttributes = new { @class = "input100", placeholder = "Username" }
                    })
                </div>

                <div class="wrap-input100 validate-input" data-validate="Insira a senha">
                    <!--<input class="input100" type="password" name="pass" placeholder="Senha">-->
                    <!--<span class="focus-input100"></span>-->
                    @Html.EditorFor(model => model.SENHA, new
                    {
                        htmlAttributes = new { @class = "input100", placeholder = "Senha" }
                    })
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <br>
                <br>
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Entrar
                    </button>
                </div>

                <div class="flex-col-c p-t-170 p-b-40"></div>
            </form>
        </div>
    </div>
</div>


<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>">

<script src="~/vendor/animsition/js/animsition.min.js"></script>

<script src="~/vendor/bootstrap/js/popper.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>

<script src="~/vendor/select2/select2.min.js"></script>

<script src="~/vendor/daterangepicker/moment.min.js"></script>
<script src="~/vendor/daterangepicker/daterangepicker.js"></script>

<script src="~/vendor/countdowntime/countdowntime.js"></script>

<script src="~/js/main.js"></script>
