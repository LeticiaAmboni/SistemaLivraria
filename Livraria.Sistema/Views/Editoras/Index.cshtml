@model IEnumerable<Livraria.Sistema.Models.EDITORAS>

@{
    ViewBag.Title = "Index";
}

<br>
<h2>Editoras</h2>
<br>

<p>
    <button type="button" class="btn btn-outline-primary">
        @Html.ActionLink("Adicionar editora", "Create")
    </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOMEFANTASIA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMAIL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TELEFONE)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CNPJ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOMEFANTASIA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TELEFONE)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDEDITORA }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IDEDITORA }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.IDEDITORA })
        </td>
    </tr>
}

</table>
